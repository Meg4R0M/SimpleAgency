{% extends 'base.html.twig' %}

{% block title 'Our properties' | trans %}

{% block body %}
  <div class="jumbotron">
    <div class="container">
      {{ form_start(form) }}
      <div class="form-row align-items-end">
        <div class="col-md-3">
          {{ form_row(form.minSurface) }}
        </div>
        <div class="col-md-3">
          {{ form_row(form.maxPrice) }}
        </div>
        <div class="col-md-4">
          {{ form_row(form.options) }}
        </div>
      </div>
      <div class="form-row align-items-end">
        <div class="col-md-8">
          {{ form_row(form.address, {'id': 'search_address'}) }}
        </div>
        <div class="col-md-2">
          {{ form_row(form.distance) }}
        </div>
        <div class="col-md-1">
          <div class="form-group">
            <button class="btn btn-primary">{{ 'Search' | trans }}</button>
          </div>
        </div>
      </div>
      {{ form_end(form) }}
    </div>
  </div>

  <div class="container mt-4">
    <h1>{{ 'See all our properties' | trans }}</h1>

    <div class="row">
      {% for property in properties %}
        <div class="col-md-4">
          {% include 'property/_property.html.twig' %}
        </div>
      {% endfor %}
    </div>

    {# display navigation #}
    <div class="pagination">
      {{ knp_pagination_render(properties) }}
    </div>

  </div>
{% endblock %}

<div class="card mb-4">
  {% if property.picture %}
    <img src="{{ vich_uploader_asset(property.picture, 'imageFile') | imagine_filter('thumb') }}"
         alt="{{ property.picture.filename }}" class="card-img-top" style="width: 100%; height: auto;">
  {% else %}
    <img src="{{ '/images/empty.jpeg' | imagine_filter('thumb') }}" alt="empty"
         class="card-img-top" style="width: 100%; height: auto;">
  {% endif %}
  <div class="card-body">
    <h5 class="card-title">
      <a href="{{ path('property_show', {slug: property.slug, id: property.id}) }}">
        {{ property.title }}
      </a>
    </h5>
    <p class="card-text">{{ property.surface }} m² - {{ property.city }} ({{ property.postalCode }})</p>
    <div class="text-primary" style="font-size:2rem; font-weight: bold;">
      {{ property.formattedPrice }} €
    </div>
  </div>
</div>